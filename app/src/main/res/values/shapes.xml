<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Small shape with rounded corners -->
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <!-- Medium shape with slightly more rounded corners -->
    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- Large shape with even more rounded corners -->
    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Example of a shape with cut corners -->
    <style name="ShapeAppearance.App.CutComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Custom bottom shape with rounded corners -->
    <style name="ShapeAppearance.App.PokemonDetail.Background" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">@dimen/_32dp</item>
        <item name="cornerSizeBottomRight">@dimen/_32dp</item>
    </style>
</resources>